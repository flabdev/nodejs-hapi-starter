{
  "env": {
    "node": true,
    "commonjs": true,
    "browser": true,
    "es2021": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["prettier", "sonarjs"],
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended",
    "plugin:sonarjs/recommended"
  ],
  "rules": {
    "no-console": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "import/extensions": "off",
    "no-plusplus": "off",
    "consistent-return": "off",
    "no-underscore-dangle": "off",
    "radix": 0,
    "no-param-reassign": 0,
    "func-names": "off"
  }
}
